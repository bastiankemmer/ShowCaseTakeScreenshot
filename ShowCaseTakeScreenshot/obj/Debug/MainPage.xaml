<Page
    x:Name="MyPage"
    x:Class="ShowCaseTakeScreenshot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShowCaseTakeScreenshot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Name="MyOuterGrid">
        <Button x:ConnectionId='1' Name="Navigate" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Page2"                       />
        <Image Name="MyImage" Height="250" Width="250" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='2' Content="Take a Screenshot" Name="ScreenshotBtn"                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="MyTextbox" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="305" Height="150" FontSize="35" Margin="48,0,47,9"/>
    </Grid>
</Page>

